{
  "extends": ["expo/tsconfig.base", "@miti/tsconfig/base"],
  "compilerOptions": {
    "strict": true,
    "types": ["vite-plugin-pwa/client"],
    "jsx": "react-jsx",
    "declaration": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "./index.js"],
  "exclude": ["src/service-worker"]
}
